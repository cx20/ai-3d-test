#VRML V2.0 utf8

# 猫の頭部
Transform {
  children [
    Shape {
      appearance Appearance {
        material Material {
          diffuseColor 1.0 0.64 0.0 # オレンジ色
        }
      }
      geometry Sphere {
        radius 1
      }
    }
  ]
}

# 猫の耳（左）
Transform {
  translation -0.6 1.1 0
  children [
    Shape {
      appearance Appearance {
        material Material {
          diffuseColor 1.0 0.64 0.0 # オレンジ色
        }
      }
      geometry Cone {
        bottomRadius 0.35
        height 0.7
      }
    }
  ]
}

